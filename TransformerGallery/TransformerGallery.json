{
  "openapi": "3.0.1",
  "info": {
    "title": "TransformerGallery | v1",
    "contact": {
      "name": "Contoso Admin",
      "email": "admin@contoso.com"
    },
    "version": "1.0.0"
  },
  "paths": {
    "/weatherforecast": {
      "get": {
        "tags": [
          "TransformerGallery"
        ],
        "operationId": "GetWeatherForecast",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/Problem"
          }
        }
      }
    },
    "/snow-day": {
      "post": {
        "tags": [
          "TransformerGallery"
        ],
        "operationId": "SnowDay",
        "responses": {
          "200": {
            "description": "OK"
          },
          "4XX": {
            "$ref": "#/components/responses/Problem"
          }
        },
        "security": [
          {
            "Bearer": [ ]
          }
        ]
      }
    },
    "/nullable-props": {
      "post": {
        "tags": [
          "TransformerGallery"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Body"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Body"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/Problem"
          }
        }
      }
    },
    "/command": {
      "post": {
        "tags": [
          "TransformerGallery"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Command"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Command"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/Problem"
          }
        }
      }
    },
    "/tag": {
      "post": {
        "tags": [
          "TransformerGallery"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Tag"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Tag"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/Problem"
          }
        }
      }
    },
    "/problems": {
      "get": {
        "tags": [
          "TransformerGallery"
        ],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/Problem"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Address": {
        "type": "object",
        "properties": {
          "street": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "state": {
            "type": "string"
          },
          "zip": {
            "type": "string"
          }
        }
      },
      "Body": {
        "required": [
          "name",
          "phoneNumber"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "homeAddress": {
            "$ref": "#/components/schemas/Address"
          },
          "workAddress": {
            "$ref": "#/components/schemas/Address"
          },
          "phoneNumber": {
            "type": "string"
          },
          "phoneType": {
            "$ref": "#/components/schemas/PhoneType"
          },
          "altPhoneNumber": {
            "type": "string"
          },
          "altPhoneType": {
            "$ref": "#/components/schemas/PhoneType"
          }
        }
      },
      "Command": {
        "required": [
          "name",
          "description"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "namespace": {
            "$ref": "#/components/schemas/ETagNamespace"
          }
        }
      },
      "ETagNamespace": {
        "enum": [
          "ContentWarning",
          "Genre",
          "Franchise"
        ]
      },
      "PhoneType": {
        "enum": [
          "Home",
          "Work",
          "Mobile"
        ]
      },
      "Tag": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "namespace": {
            "$ref": "#/components/schemas/ETagNamespace"
          }
        }
      },
      "WeatherForecast": {
        "required": [
          "date",
          "temperatureC",
          "summary",
          "chanceOfPrecip"
        ],
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "summary": {
            "type": "string",
            "nullable": true
          },
          "chanceOfPrecip": {
            "type": "number",
            "format": "decimal"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32"
          }
        }
      }
    },
    "responses": {
      "Problem": {
        "description": "A problem occurred",
        "content": {
          "application/problem+json": {
            "schema": {
              "$ref": "#/components/schemas/Problem"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "Bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "tags": [
    {
      "name": "TransformerGallery"
    }
  ]
}